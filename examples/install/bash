echo "export CUDA_HOME=/usr/local/cuda" >> ~/.bash_profile
echo "export DYLD_LIBRARY_PATH="$CUDA_HOME/lib:$CUDA_HOME:$CUDA_HOME/extras/CUPTI/lib"">> ~/.bash_profile
echo "export LD_LIBRARY_PATH=$DYLD_LIBRARY_PATH">> ~/.bash_profile
source ~/.bash_profile


